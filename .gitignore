# ============================================
# Nawy Monorepo - Consolidated .gitignore
# ============================================

# ============================================
# Dependencies (All projects)
# ============================================
node_modules/
.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# ============================================
# Environment Variables
# ============================================
.env
.env.local
.env.development.local
.env.test.local
.env.production.local
.env*
!.env.example

# ============================================
# Backend Build Artifacts
# ============================================
backend/dist/
backend/coverage/

# Backend Prisma compiled files
backend/prisma/*.js
backend/prisma/*.js.map
backend/prisma/*.d.ts
!backend/prisma/schema.prisma
!backend/prisma/seed.ts
!backend/prisma/migrations/

# ============================================
# Frontend Build Artifacts
# ============================================
frontend/.next/
frontend/out/
frontend/build/
frontend/coverage/
frontend/*.tsbuildinfo
frontend/next-env.d.ts

# ============================================
# Testing
# ============================================
coverage/
*.coverage
.nyc_output/

# ============================================
# Logs
# ============================================
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# ============================================
# OS Files
# ============================================
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
*.pem

# ============================================
# IDE / Editor
# ============================================
.vscode/
.idea/
*.swp
*.swo
*~
.project
.classpath
.settings/
*.sublime-*

# ============================================
# Docker
# ============================================
.dockerignore

# ============================================
# Vercel
# ============================================
.vercel

# ============================================
# Misc
# ============================================
*.seed
*.pid
*.pid.lock
